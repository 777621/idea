<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lagou.dao.PromotionSpaceMapper">

    <!-- 查询广告位列表
    <select id="findAllPromotionSpace" resultType="com.lagou.entity.PromotionSpace">
        select * from promotion_space
    </select>

    &lt;!&ndash; 添加广告位信息 &ndash;&gt;
    <insert id="savePromotionSpace" parameterType="com.lagou.entity.PromotionSpace">
        insert into promotion_space values (null,#{name},#{spaceKey},#{createTime},#{updateTime},#{isDel})
    </insert>

    &lt;!&ndash; 回显广告位信息  &ndash;&gt;
    <select id="findPromotionSpaceById" parameterType="int" resultType="com.lagou.entity.PromotionSpace">
        select id,name from promotion_space where id = #{id}
    </select>
    &lt;!&ndash; 修改广告位信息&ndash;&gt;
    <update id="updatePromotionSpace" parameterType="com.lagou.entity.PromotionSpace">
        update promotion_space set name = #{name},updateTime = #{updateTime} where id = #{id}
    </update>-->
</mapper>