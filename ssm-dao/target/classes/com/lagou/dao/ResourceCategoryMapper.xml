<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lagou.dao.ResourceCategoryMapper">

    <!-- 查询资源分类列表
    <select id="findAllResourceCategory" resultType="com.lagou.entity.ResourceCategory">
        select * from resource_category
    </select>

    &lt;!&ndash; 添加资源分类信息 &ndash;&gt;
    <insert id="saveResourceCategory" parameterType="com.lagou.entity.ResourceCategory">
        insert into resource_category (name,sort,created_time,updated_time,created_by,updated_by)
        values (#{name},#{sort},#{createdTime},#{updatedTime},#{createdBy},#{updatedBy})
    </insert>

    &lt;!&ndash; 修改资源分类信息 &ndash;&gt;
    <update id="updateResourceCategory" parameterType="com.lagou.entity.ResourceCategory">
        update resource_category
        <set>
            <if test="name !=null and name !=''">
                name = #{name},
            </if>
            <if test="sort !=null and sort !=''">
                sort = #{sort},
            </if>
            <if test="updatedTime !=null">
                updated_time = #{updatedTime},
            </if>
        </set>
        where id = #{id}
    </update>

    &lt;!&ndash; 回显资源分类信息 &ndash;&gt;
    <select id="findResourceCategoryById" parameterType="int" resultType="com.lagou.entity.ResourceCategory">
        select * from resource_category where id = #{id}
    </select>

    &lt;!&ndash; 删除资源分类信息 &ndash;&gt;
    <delete id="deleteResourceCategoryById" parameterType="int">
        delete from resource_category where id = #{id}
    </delete>-->
</mapper>